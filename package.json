{
	"name": "roblox-ts",
	"version": "0.4.0",
	"private": true,
	"description": "A TypeScript-to-Lua Compiler for Roblox",
	"main": "out/CLI/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblox-ts/roblox-ts.git"
	},
	"bin": {
		"rbxtsc": "out/cli.js"
	},
	"scripts": {
		"eslint": "npx eslint \"src/**/*.ts\" --max-warnings 0",
		"build": "npx ttsc -b",
		"test-compile": "mocha --timeout 0 --recursive out/test.js",
		"test-compile-ci": "NODE_ENV=test nyc npm run test-compile",
		"test-run": "lua tests/spec.lua",
		"test": "npm run build && npm run test-compile && npm run test-run",
		"ci": "npm run build && npm run test-compile-ci && npm run test-run",
		"coverage": "nyc report --reporter=lcov",
		"prepublishOnly": "npm run build",
		"types": "cd tests && npm install @rbxts/types",
		"devlink": "cd devlink && npm link"
	},
	"nyc": {
		"all": true,
		"include": [
			"out/compiler/**"
		]
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"byots": "^4.0.0-dev.20200428.13.42",
		"chalk": "^3.0.0",
		"chokidar": "^3.4.0",
		"fs-extra": "^8.1.0",
		"ts-simple-type": "^0.3.7",
		"typescript": "^3.8.3",
		"yargs": "^15.3.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.1.0",
		"@types/node": "^13.13.4",
		"@types/yargs": "^15.0.4",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"mocha": "^7.1.2",
		"prettier": "^1.19.1",
		"typescript-transform-paths": "^1.1.14"
	},
	"files": [
		"out",
		"lib",
		"templates",
		"CHANGELOG.md",
		"rojo-schema.json",
		"!**/*.js.map"
	]
}
